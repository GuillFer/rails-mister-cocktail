<div class="banner" style="background-image: url('<%= cl_image_path "https://res.cloudinary.com/dqckrrqjf/image/upload/v1614364990/cocktail-banner-2_jnbcoe.jpg", width: 1000, height: 400 %>')">
<h1>Cocktails</h1>
<%= link_to "Add a cocktail", new_cocktail_path(@cocktail), "class" => "cocktail-link menu-action top-right" %>

</div>
<div class="index">
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail), "class" => "card" do %>
    <div class="card-content" style="background-image: url('<%= cl_image_path cocktail.photo.key, height: 100, width: 100, crop: :thumb if cocktail.photo.attached? %>')">
    <h3 class="mx-4"><%= cocktail.name.capitalize %></h3>
    </div>
  <% end %>
<% end %>
</div>

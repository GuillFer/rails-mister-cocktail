<h1><%= @cocktail.name.capitalize %></h1>
<div class="top-right d-flex align-items-center">
  <%= link_to cocktail_path(@cocktail),
            "class" => "delete",
            method: :delete,
            data: { confirm: "Delete #{@cocktail.name}?" } do %>
            <i class="fas fa-trash-alt"></i>
  <% end %>
  <%= link_to "Back to cocktails list", index_path, "class" => "menu-action" %>
</div>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill if @cocktail.photo.attached?%>

<h3>Doses</h3>
<ul class="doses">
<% @doses.each do |dose| %>
  <li class="dose"><%= dose.description %> <%= dose.ingredient.name %>
  <%= link_to cocktail_dose_path(@cocktail, dose),
            "class" => "delete",
            method: :delete,
            data: { confirm: "Delete #{dose.description} #{dose.ingredient.name}?" } do %>
            <i class="fas fa-trash-alt"></i>
  <% end %></li>
<% end %>
</ul>

<%= render "dose_form", task: @dose %>
